@model List<ASP.NET_Core_MVC_Piacom.Models.Domain.Product>
@{
}

<div class="bg-secondary bg-opacity-10 py-2">
    <div class="container">
        <h1>
            Product List
        </h1>
    </div>
</div>

<a asp-area="" asp-controller="Product" asp-action="Add">Add Product</a>

<div class="container py-5">
    @if (Model != null && Model.Any())
    {
        <table class="table">
            <thead>
                <tr>
                    <th>Product Code</th>
                    <th>Product Name</th>
                    <th>Product Description</th>
                    <th>Product Status</th>
                    <th>Actions</th>

                </tr>
            </thead>
            <tbody>
                @foreach (var product in Model)
                {
                    <tr>
                        <td>@product.ProductCode</td>
                        <td>@product.ProductName</td>
                        <td>@product.ProductDescription</td>
                        <td>@product.ProductStatus</td>

                        <td>
                            <a asp-area="" asp-controller="Product" asp-action="Edit" asp-route-id="@product.ProductID">Edit</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No Product found!</p>
    }
</div>