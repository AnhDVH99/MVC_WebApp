@model List<ASP.NET_Core_MVC_Piacom.Models.Domain.Product>

        <h1 class="mb-4 text-center">Product List</h1>


<div class="container py-5">
    <div class="d-flex justify-content-start mb-3">
        <a asp-area="" asp-controller="Product" asp-action="Add" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Add Product
        </a>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            @if (Model != null && Model.Any())
            {
                <table class="table">
                    <thead>
                        <tr>
                            <th>Product Code</th>
                            <th>Product Name</th>
                            <th>Product Description</th>
                            <th>Product Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var product in Model)
                        {
                            <tr>
                                <td>@product.ProductCode</td>
                                <td>@product.ProductName</td>
                                <td>@product.ProductDescription</td>
                                <td>@product.ProductStatus</td>
                                <td>
                                    <a asp-area="" asp-controller="Product" asp-action="Edit" asp-route-id="@product.ProductID" class="btn btn-warning btn-sm">
                                        <i class="bi bi-pencil"></i> Edit
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <p>No Product found!</p>
            }
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
