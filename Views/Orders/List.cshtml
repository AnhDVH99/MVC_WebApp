@model List<ASP.NET_Core_MVC_Piacom.Models.Domain.Order>

@{
}

<div class="bg-secondary bg-opacity-10 py-2">
    <div class="container">
        <h1>
            Order List
        </h1>
    </div>
</div>

<a asp-area="" asp-controller="Orders" asp-action="Add">Add Order</a>

<div class="container py-5">
    @if (Model != null && Model.Any())
    {
        <table class="table">
            <thead>
                <tr>
                    <th>Customer Name</th>
                    <th>Order date</th>
                    <th>Required date</th>
                    <th>Shipped Date</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var order in Model)
                {
                    <tr>
                        <td>@order.Customer.CustomerName</td>
                        <td>@order.OrderDate</td>
                        <td>@order.RequiredDate</td>
                        <td>@order.ShippedDate</td>
                        <td>
                            <a asp-area="" asp-controller="Orders" asp-action="Edit" asp-route-id="@order.OrderID">Edit</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No Order found!</p>
    }
</div>