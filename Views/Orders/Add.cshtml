@model ASP.NET_Core_MVC_Piacom.Models.ViewModels.AddOrderRequest

<h1 class="text-center">Add Order</h1>

<div class="container py-5">
    @if (Model != null)
    {
        <div class="card">
            <div class="card-body">
                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label class="form-label">Order Date</label>
                            <input type="date" class="form-control" id="orderDate" asp-for="OrderDate" />
                            <span asp-validation-for="OrderDate" class="text-danger"></span>
                        </div>

                        <div class="col-md-6">
                            <label class="form-label">Required Date</label>
                            <input type="date" class="form-control" id="requiredDate" asp-for="RequiredDate" />
                            <span asp-validation-for="RequiredDate" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label class="form-label">Shipped Date</label>
                            <input type="date" class="form-control" id="shippedDate" asp-for="ShippedDate" />
                            <span asp-validation-for="ShippedDate" class="text-danger"></span>
                        </div>

                        <div class="col-md-6">
                            <label class="form-label">Order Status</label>
                            <input type="text" class="form-control" id="orderStatus" asp-for="OrderStatus" placeholder="Order Status" />
                            <span asp-validation-for="OrderStatus" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label class="form-label">Comment</label>
                            <input type="text" class="form-control" id="comment" asp-for="Comment" placeholder="Comment" />
                            <span asp-validation-for="Comment" class="text-danger"></span>
                        </div>

                        <div class="col-md-6">
                            <label class="form-label">Customer</label>
                            <select class="form-select" asp-items="@Model.Customers" asp-for="CustomerID">
                                <option value="">Select a Customer</option>
                            </select>
                            <span asp-validation-for="CustomerID" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label class="form-label">Employee</label>
                            <select class="form-select" asp-items="@Model.Employees" asp-for="EmployeeID">
                                <option value="">Select an Employee</option>
                            </select>
                            <span asp-validation-for="EmployeeID" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-12">
                            <div class="d-flex justify-content-between">
                                <button type="submit" class="btn btn-primary">Create</button>
                                <a asp-action="List" class="btn btn-secondary">
                                    <i class="bi bi-arrow-left-circle"></i> Back to List
                                </a>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    }
    else
    {
        <p>Order not found!</p>
    }
</div>

<style>
    .input-group {
        margin-bottom: 10px; /* Add spacing between input groups */
    }

    .card {
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        border-radius: 8px;
    }

    .btn {
        transition: background-color 0.3s, transform 0.3s;
    }

        .btn:hover {
            background-color: #0056b3; /* Darker shade on hover for primary button */
            transform: scale(1.05); /* Slightly enlarge the button */
        }
</style>

@await Html.PartialAsync("_ValidationScriptsPartial")
