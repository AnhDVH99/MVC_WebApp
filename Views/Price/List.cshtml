@model List<ASP.NET_Core_MVC_Piacom.Models.Domain.Price>

@{
    ViewData["Title"] = "Price List";
}

<h1 class="mb-4 text-center">Price List</h1>

<div class="container py-5">
    <div class="d-flex justify-content-start mb-3">
        <a asp-area="" asp-controller="Price" asp-action="Add" class="btn btn-primary me-2">
            <i class="bi bi-plus-circle"></i> Add Price
        </a>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            @if (Model != null && Model.Any())
            {
                <table class="table">
                    <thead>
                        <tr>
                            <th>Price Code</th>
                            <th>From Date</th>
                            <th>To Date</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var price in Model)
                        {
                            <tr>
                                <td>@price.PriceCode</td>
                                <td>@price.FromDate.ToString("yyyy-MM-dd HH:mm")</td> <!-- Format date as needed -->
                                <td>@price.ToDate.ToString("yyyy-MM-dd HH:mm")</td> <!-- Format date as needed -->
                                <td>
                                    <a asp-area="" asp-controller="Price" asp-action="Edit" asp-route-id="@price.PriceID" class="btn btn-warning btn-sm">
                                        <i class="bi bi-pencil"></i> Edit
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <p>No price found!</p>
            }
        </div>
    </div>
</div>