@model ASP.NET_Core_MVC_Piacom.Models.ViewModels.LoginViewModel

@{
}

<div class="container mx-auto">
    <div class="row justify-content-center">
        <div class="col-12 col-lg-6">
            <h1 class="mt-3 mb-3 h3 ">
                Login
            </h1>
            <form asp-action="Login" asp-controller="Account" method="post">
                
                <div class=" mb-3">
                    <label class="form-label">Username</label>
                    <input type="text" id="username" class="form-control" asp-for="Username" required />
                    <span asp-validation-for="Username" class="text-danger"></span>
                </div>

                <div class=" mb-3">
                    <label class="form-label">Password</label>
                    <input type="password" id="password" class="form-control" asp-for="Password" required />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="mb-3">
                    <button type="submit" class="btn btn-dark">Login</button>
                </div>
                <input type="hidden" id="returnUrl" class="form-control" asp-for="ReturnUrl" />
            </form>
        </div>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
