@model ASP.NET_Core_MVC_Piacom.Models.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Login";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-12 col-lg-6">
            <h1 class="text-center mb-4">Login</h1>
            <div class="card shadow-lg border-0 rounded">
                <div class="card-body">
                    <form asp-action="Login" asp-controller="Account" method="post">
                        <div class="mb-4">
                            <label class="form-label" for="username">Username</label>
                            <input type="text" id="username" class="form-control" asp-for="Username" required />
                            <span asp-validation-for="Username" class="text-danger"></span>
                        </div>

                        <div class="mb-4">
                            <label class="form-label" for="password">Password</label>
                            <input type="password" id="password" class="form-control" asp-for="Password" required />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="mb-4">
                            <button type="submit" class="btn btn-primary w-100 shadow-sm">Login</button>
                        </div>

                        <div class="mb-3 text-center">
                            <span class="text-muted">or</span>
                        </div>

                        <div class="mb-4">
                            <a asp-controller="Account" asp-action="LoginWithGoogle" class="btn btn-outline-danger w-100 shadow-sm">
                                Login with Google
                            </a>
                        </div>

                        <input type="hidden" id="returnUrl" asp-for="ReturnUrl" />
                    </form>
                </div>
            </div>
            <div class="text-center mt-3">
                <p class="text-muted">Don't have an account? <a href="/Account/Register" class="link-primary">Register here</a></p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

