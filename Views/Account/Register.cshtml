@model ASP.NET_Core_MVC_Piacom.Models.ViewModels.RegisterViewModel

@{
    ViewData["Title"] = "Register";
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success text-center mt-3">
        @TempData["SuccessMessage"]
    </div>
}

<div class="container">
    <div class="row justify-content-center mt-5">
        <div class="col-12 col-md-8 col-lg-6">
            <div class="card shadow-lg border-0">
                <div class="card-body p-5">
                    <h2 class="text-center mb-4 text-primary">Create Your Account</h2>
                    <p class="text-muted text-center">Fill in your details to get started</p>

                    <form asp-action="Register" asp-controller="Account" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="form-group mb-4">
                            <label for="username" class="form-label">Username</label>
                            <input type="text" id="username" class="form-control" asp-for="Username" placeholder="Enter your username" required />
                            <span asp-validation-for="Username" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-4">
                            <label for="email" class="form-label">Email</label>
                            <input type="email" id="email" class="form-control" asp-for="Email" placeholder="Enter your email address" required />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-4">
                            <label for="password" class="form-label">Password</label>
                            <input type="password" id="password" class="form-control" asp-for="Password" placeholder="Create a password" required />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <div class="d-grid mb-3">
                            <button type="submit" class="btn btn-primary btn-lg">Register</button>
                        </div>
                    </form>

                    <p class="text-center mt-3">
                        Already have an account? <a href="/Account/Login" class="text-primary">Log in</a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
