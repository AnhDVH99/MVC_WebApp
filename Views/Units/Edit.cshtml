@model ASP.NET_Core_MVC_Piacom.Models.Domain.Unit

@{
    ViewData["Title"] = "Edit";
}

<h1 class="mb-4 text-center">Edit Unit</h1>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h4 class="card-title">Edit Unit Information</h4>
                    <hr />
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <input type="hidden" asp-for="UnitID" />

                        <div class="mb-3">
                            <label asp-for="UnitCode" class="form-label"></label>
                            <input asp-for="UnitCode" class="form-control" placeholder="Enter unit code" />
                            <span asp-validation-for="UnitCode" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="UnitName" class="form-label"></label>
                            <input asp-for="UnitName" class="form-control" placeholder="Enter unit name" />
                            <span asp-validation-for="UnitName" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="bi bi-arrow-left-circle"></i> Back to List
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-save"></i> Save Changes
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
