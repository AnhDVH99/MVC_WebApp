@model ASP.NET_Core_MVC_Piacom.Models.Domain.Unit

@{
    ViewData["Title"] = "Delete";
}

<h1 class="mb-4 text-center">Delete Unit</h1>

<div class="container">
    <div class="d-flex justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h4 class="card-title text-center">Confirm Deletion</h4>
                    <hr />
                    <h3 class="text-center mb-4">Are you sure you want to delete this unit?</h3> <!-- Added mb-4 for margin-bottom -->
                    <dl class="row">
                        <dt class="col-sm-4 fw-bold">
                            @Html.DisplayNameFor(model => model.UnitCode)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.UnitCode)
                        </dd>
                        <dt class="col-sm-4 fw-bold">
                            @Html.DisplayNameFor(model => model.UnitName)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.UnitName)
                        </dd>
                    </dl>
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="UnitID" />
                        <div class="d-flex justify-content-between mt-4">
                            <button type="submit" class="btn btn-danger">
                                <i class="bi bi-trash"></i> Delete
                            </button>
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="bi bi-arrow-left-circle"></i> Back to List
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
