@model ASP.NET_Core_MVC_Piacom.Models.ViewModels.EditEmployeeRequest

@{
    ViewData["Title"] = "Edit Employees";
}


    <div class="container">
        <h1 class="mb-4 text-center">Edit Employee</h1>
    </div>

<div class="container py-5">
    <div class="d-flex justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h4 class="card-title">Employee Information</h4>
                    <hr />
                    <form method="post">
                        <input type="hidden" asp-for="EmployeeID" />

                        <!-- Validation Summary -->
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <!-- Row 1: First Name and Last Name -->
                        <div class="mb-3 row">
                            <div class="col-md-6">
                                <label asp-for="FirstName" class="form-label">First Name</label>
                                <input type="text" class="form-control" asp-for="FirstName" />
                                <span asp-validation-for="FirstName" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="LastName" class="form-label">Last Name</label>
                                <input type="text" class="form-control" asp-for="LastName" />
                                <span asp-validation-for="LastName" class="text-danger"></span>
                            </div>
                        </div>

                        <!-- Row 2: Email and Phone -->
                        <div class="mb-3 row">
                            <div class="col-md-6">
                                <label asp-for="Email" class="form-label">Email</label>
                                <input type="email" class="form-control" asp-for="Email" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Phone" class="form-label">Phone</label>
                                <input type="text" class="form-control" asp-for="Phone" />
                                <span asp-validation-for="Phone" class="text-danger"></span>
                            </div>
                        </div>

                        <!-- Row 3: Job Title -->
                        <div class="mb-3">
                            <label asp-for="JobTitle" class="form-label">Job Title</label>
                            <input type="text" class="form-control" asp-for="JobTitle" />
                            <span asp-validation-for="JobTitle" class="text-danger"></span>
                        </div>

                        <!-- Buttons: Update and Delete -->
                        <div class="d-flex justify-content-between mt-4">
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-save"></i> Update
                            </button>
                            <button type="button" class="btn btn-danger" onclick="confirmDeletion()">
                                <i class="bi bi-trash"></i> Delete
                            </button>
                        </div>

                        <!-- Confirmation Message for Deletion -->
                        <div id="deleteConfirmation" style="display:none;" class="alert alert-warning mt-3">
                            <strong>Are you sure you want to delete this employee?</strong>
                            <form asp-action="Delete" method="post" class="mt-2">
                                <input type="hidden" asp-for="EmployeeID" />
                                <button type="submit" class="btn btn-danger">Delete</button>
                                <button type="button" class="btn btn-secondary" onclick="cancelDeletion()">Cancel</button>
                            </form>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function confirmDeletion() {
            document.getElementById('deleteConfirmation').style.display = 'block';
        }

        function cancelDeletion() {
            document.getElementById('deleteConfirmation').style.display = 'none';
        }
    </script>
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
