@model List<ASP.NET_Core_MVC_Piacom.Models.Domain.Employee>


@{
    ViewData["Title"] = "Employees List";
}
    <div class="container">
        <h1>
            Employee List
        </h1>
    </div>
<div class="container py-5">
    <div class="d-flex justify-content-start mb-3">
        <a asp-area="" asp-controller="Employees" asp-action="Add" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Add Employee
        </a>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            @if (Model != null && Model.Any())
            {
                <table class="table">
                    <thead>
                        <tr>
                            <th>First Name</th>
                            <th>Last Name</th>
                            <th>Email</th>
                            <th>Phone</th>
                            <th>Job Title</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var employee in Model)
                        {
                            <tr>
                                <td>@employee.FirstName</td>
                                <td>@employee.LastName</td>
                                <td>@employee.Email</td>
                                <td>@employee.Phone</td>
                                <td>@employee.JobTitle</td>
                                <td>
                                    <a asp-area="" asp-controller="Employees" asp-action="Edit" asp-route-id="@employee.EmployeeID" class="btn btn-warning btn-sm">
                                        <i class="bi bi-pencil"></i> Edit
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <p>No employee found!</p>
            }
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
