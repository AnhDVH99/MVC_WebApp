@model IEnumerable<ASP.NET_Core_MVC_Piacom.Models.Domain.Product>

@{
    ViewData["Title"] = "Product List";
}

<h1 class="mb-4 text-center">Product List</h1>

<div class="container py-5">
    <div class="d-flex justify-content-start mb-3">
        <a asp-action="Create" class="btn btn-primary me-2">
            <i class="bi bi-plus-circle"></i> Create New
        </a>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            @if (Model != null && Model.Any())
            {
                <table class="table">
                    <thead>
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.First().ProductCode)</th>
                            <th>@Html.DisplayNameFor(model => model.First().ProductName)</th>
                            <th>@Html.DisplayNameFor(model => model.First().ProductDescription)</th>
                            <th>@Html.DisplayNameFor(model => model.First().ProductStatus)</th>
                            <th class="text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.ProductCode)</td>
                                <td>@Html.DisplayFor(modelItem => item.ProductName)</td>
                                <td>@Html.DisplayFor(modelItem => item.ProductDescription)</td>
                                <td>@Html.DisplayFor(modelItem => item.ProductStatus)</td>
                                <td class="text-center">
                                    <a asp-action="Edit" asp-route-id="@item.ProductID" class="btn btn-warning btn-sm">
                                        <i class="bi bi-pencil"></i> Edit
                                    </a>
                                    |
                                    <a asp-action="Details" asp-route-id="@item.ProductID" class="btn btn-info btn-sm">
                                        <i class="bi bi-info-circle"></i> Details
                                    </a>
                                    |
                                    <a asp-action="Delete" asp-route-id="@item.ProductID" class="btn btn-danger btn-sm">
                                        <i class="bi bi-trash"></i> Delete
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <p>No products found!</p>
            }
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
